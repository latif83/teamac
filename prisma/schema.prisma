generator client {
  provider = "prisma-client-js"
  output   = "../config/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id        String   @id @default(cuid())
  name      String
  code      String
  flag      String
  offers    Offer[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String
  image       Json
  offers      Offer[]
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Offer {
  id               String    @id @default(cuid())
  title            String
  description      String
  serviceId        String
  countryId        String
  priceLabel       String?
  priceDescription String?
  thumbnail        Json
  city             String?
  requirements     Json
  validity         DateTime?
  isFeatured       Boolean   @default(false)

  datePosted DateTime @default(now())
  updatedAt  DateTime @updatedAt

  service      Service        @relation(fields: [serviceId], references: [id])
  country      Country        @relation(fields: [countryId], references: [id])
  Applications Applications[]
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model Consultation {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String // Local part (without country code)
  countryCode String // e.g. "+233"
  countryName String? // Optional, e.g. "Ghana"
  mode        String // "Online" | "In-Person"
  date        DateTime
  message     String?
  status      String   @default("Pending")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Applications {
  id        String   @id @default(cuid())
  offerId   String
  fullName  String
  email     String
  phone     String
  additionalInfo   String?
  status     String   @default("Pending")
  countryCode String?
  countryName String?
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  offer     Offer    @relation(fields: [offerId], references: [id])
}


model Feedback {
  // Primary Key and ID
   id        String   @id @default(cuid())

  // Client Details
  fullName    String
  email       String
  
  // Location
  country     String
  city        String
  
  // Content
  comment     String
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}